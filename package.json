{
    "name": "music-player",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "concurrently \"npm run dev\" \"wait-on http://localhost:8080 && cross-env NODE_ENV=development electronmon .\"",
        "dev": "webpack serve --mode development --config webpack.config.js",
        "build": "webpack --mode production",
        "build-electron": "webpack --mode production && electron-builder",
        "test-react": "webpack serve --mode development --open",
        "electron": "cross-env NODE_ENV=development electron .",
        "package": "electron-builder"
    },
    "dependencies": {
        "@electron/remote": "^2.1.3",
        "buffer": "^6.0.3",
        "dotenv": "^17.2.1",
        "electron": "^25.0.0",
        "electron-store": "^8.1.0",
        "process": "^0.11.10",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.30.1",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "@babel/core": "^7.28.3",
        "@babel/preset-env": "^7.28.3",
        "@babel/preset-react": "^7.27.1",
        "assert": "^2.0.0",
        "autoprefixer": "^10.4.14",
        "babel-loader": "^9.2.1",
        "concurrently": "^8.0.1",
        "cross-env": "^7.0.3",
        "crypto-browserify": "^3.12.0",
        "css-loader": "^6.8.1",
        "electron-builder": "^24.4.0",
