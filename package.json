{
    "name": "music-player",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "concurrently \"npm run dev\" \"wait-on http://localhost:8080 && cross-env NODE_OPTIONS=--no-deprecation electronmon .\"",
        "dev": "cross-env NODE_OPTIONS=--no-deprecation webpack serve --mode development",
        "build": "webpack --mode production && electron-builder",
        "package": "electron-builder"
    },
    "dependencies": {
        "@electron/remote": "^2.1.3",
        "@ungap/global-this": "^0.4.4",
        "autoprefixer": "^10.4.14",
        "dotenv": "^17.2.1",
        "electron": "^25.0.0",
        "electron-store": "^8.1.0",
        "framer-motion": "^10.12.16",
        "genius-lyrics-api": "^3.2.1",
        "howler": "^2.2.3",
        "music-metadata-browser": "^2.5.9",
        "node-id3": "^0.2.3",
        "postcss": "^8.4.24",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.8.0",
        "react-router-dom": "^6.30.1",
        "sqlite3": "^5.1.7",
        "tailwindcss": "^3.3.2"
    },
    "devDependencies": {
        "@babel/core": "^7.22.5",
        "@babel/preset-env": "^7.22.5",
        "@babel/preset-react": "^7.22.5",
        "assert": "^2.0.0",
        "babel-loader": "^9.1.2",
        "concurrently": "^8.0.1",
        "cross-env": "^7.0.3",
        "crypto-browserify": "^3.12.0",
        "css-loader": "^6.8.1",
        "electron-builder": "^24.4.0",
        "electronmon": "^2.0.2",
        "html-webpack-plugin": "^5.5.3",
        "os-browserify": "^0.3.0",
        "path-browserify": "^1.0.1",
        "postcss-loader": "^7.3.3",
        "postcss-preset-env": "^8.4.1",
        "style-loader": "^3.3.3",
        "util": "^0.12.5",
        "wait-on": "^7.0.1",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.0"
    },
    "build": {
        "appId": "com.musicplayer.app",
        "productName": "Music Player",
        "files": [
            "dist/**/*",
            "main.js",
            "preload.js"
        ],
        "directories": {
            "output": "build"
        }
    }
}
