{
    "name": "music-player",
    "version": "1.0.0",
    "description": "A modern music player built with React and Electron",
    "main": "main.js",
    "homepage": "./",
    "scripts": {
        "start": "concurrently \"npm run electron\" \"npm run dev\"",
        "dev": "webpack serve --config webpack.config.js",
        "build": "webpack --mode production",
        "electron": "wait-on http://localhost:8080 && electron .",
        "electron-dev": "electron . --dev",
        "electron-only": "electron .",
        "pack": "npm run build && electron-builder",
        "dist": "npm run build && electron-builder --publish=never",
        "postinstall": "electron-builder install-app-deps",
        "clean": "rimraf dist build",
        "lint": "eslint src --ext .js,.jsx"
    },
    "keywords": [
        "music",
        "player",
        "electron",
        "react"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "electron-store": "^8.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.8.0",
        "sqlite3": "^5.1.6"
    },
    "devDependencies": {
        "@babel/core": "^7.20.0",
        "@babel/plugin-transform-class-properties": "^7.27.1",
        "@babel/plugin-transform-runtime": "^7.19.0",
        "@babel/preset-env": "^7.20.0",
        "@babel/preset-react": "^7.18.0",
        "@babel/runtime": "^7.20.0",
        "@electron/remote": "^2.0.9",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
        "assert": "^2.1.0",
        "autoprefixer": "^10.4.0",
        "babel-loader": "^9.1.0",
        "buffer": "^6.0.3",
        "circular-dependency-plugin": "^5.2.2",
        "concurrently": "^7.6.0",
        "crypto-browserify": "^3.12.1",
        "css-loader": "^6.7.0",
        "electron": "^22.0.0",
        "electron-builder": "^23.6.0",
        "eslint": "^8.30.0",
        "eslint-plugin-react": "^7.31.0",
        "global": "^4.4.0",
        "html-webpack-plugin": "^5.5.0",
        "https-browserify": "^1.0.0",
        "os-browserify": "^0.3.0",
        "path-browserify": "^1.0.1",
        "postcss": "^8.4.20",
        "postcss-loader": "^7.0.0",
        "process": "^0.11.10",
        "querystring-es3": "^0.2.1",
        "react-refresh": "^0.14.0",
        "rimraf": "^4.1.0",
        "stream-browserify": "^3.0.0",
        "stream-http": "^3.2.0",
        "style-loader": "^3.3.0",
        "tailwindcss": "^3.2.0",
        "url": "^0.11.4",
        "util": "^0.12.5",
        "wait-on": "^7.0.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.0",
        "webpack-dev-server": "^4.11.0"
    },
    "build": {
        "appId": "com.yourcompany.musicplayer",
        "productName": "Music Player",
        "directories": {
            "output": "release",
            "buildResources": "assets"
        },
        "files": [
            "dist/**/*",
            "main.js",
            "preload.js",
            "package.json",
            "database/**/*"
        ],
        "extraFiles": [
            {
                "from": "public",
                "to": "public",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "category": "public.app-category.music",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "win": {
            "target": "nsis",
            "publisherName": "Your Name"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "AudioVideo"
        },
        "nsis": {
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Music Player"
        }
    },
    "electronmon": {
        "patterns": [
            "!**/**",
            "main.js",
            "preload.js"
        ]
    }
}
